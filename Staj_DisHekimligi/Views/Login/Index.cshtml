@model  Staj_DisHekimligi.ViewModel.Kul_Cihaz
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Giris_Yap", "Login", FormMethod.Post))
{
    <div class="row" style="margin-top:180px;">
        <div class="col-sm-4"> </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.TextBoxFor(m => m.kul_ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.TextBoxFor(m => m.sifre, new { @class = "form-control", type = "password", placeholder = "Şifre" })
                        </div>
                    </div>
                    <div class="col-xs-12">
                        @ViewBag.Mesaj

                        <button class="btn btn-info btn-lg btn-block text-uppercase btn-rounded" type="submit">Giriş Yap</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

